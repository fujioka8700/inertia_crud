{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "types": ["vite/client"],
        "noUncheckedIndexedAccess": true,
        "outDir": "./public/build"
    },
    "include": ["resources/js/**/*"],
    "exclude": ["node_modules", "public"]
}
